<style>
  body {
    font-family: Arial, sans-serif;
    background: #f5f5f5;
    margin: 0;
    padding: 0;
  }

  #chat-box {
  max-width: 100%;
  width: 100%;
  padding: 1rem;
  box-sizing: border-box;
  overflow-y: auto;
  height: 80vh;
  }

  #chat-form {
  display: flex;
  padding: 1rem;
  gap: 0.5rem;
  box-sizing: border-box;
  }

  #user-input {
  flex: 1;
  font-size: 1rem;
  padding: 0.5rem;
  }

  #chat-form button {
    padding: 0.5rem 1rem;
    border: none;
    background: #4f46e5;
    color: white;
    border-radius: 20px;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
  }

  .user, .assistant {
    margin-bottom: 1rem;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    max-width: 80%;
    word-wrap: break-word;
  }

  .user {
    background: #e0f7fa;
    align-self: flex-end;
    margin-left: auto;
  }

  .assistant {
    background: #e8eaf6;
    align-self: flex-start;
    margin-right: auto;
  }

  @media (max-width: 600px) {
    #chat-box {
      height: 60vh;
    }

    #user-input {
      font-size: 0.9rem;
    }
  }
</style>

<div id="chat-box" style="display: flex; flex-direction: column;"></div>

<form id="chat-form">
  <input type="text" id="user-input" autocomplete="off" />
  <button type="submit">Send</button>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script>
  $(document).ready(function () {
    // Load existing messages
    $.get("/eddie.json", function (data) {
      data.messages.forEach(function (msg) {
        appendMessage(msg.role, msg.content);
      });
    });

    // Send new message
    $("#chat-form").on("submit", function (e) {
      e.preventDefault();
      const content = $("#user-input").val();
      if (!content.trim()) return;

      appendMessage("user", content);
      $("#user-input").val("");

      $.ajax({
        type: "POST",
        url: "/eddie",
        contentType: "application/json",
        data: JSON.stringify({ message: content }),
        success: function (data) {
          appendMessage("assistant", data.content);
        },
        error: function () {
          appendMessage("assistant", "[Error: something went wrong]");
        }
      });
    });

    function appendMessage(role, content) {
      const name = role === "assistant" ? "Eddie" : "Joon";
      const html = marked.parse(content);
      const div = $("<div>").addClass(role).html(`<strong>${name}:</strong><br>${html}`);
      $("#chat-box").append(div);
      $("#chat-box").scrollTop($("#chat-box")[0].scrollHeight);
    }
  });
</script>
